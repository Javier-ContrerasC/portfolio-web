---
const experiences = [
  {
    title: "Profesor Auxiliar y Ayudante",
    company: "Universidad de Chile",
    period: "2023 - Actualidad",
    description: "Responsable de realizar clases prácticas y apoyar a estudiantes en los ramos de Programación y Estructuras de Datos, Introducción a la Computación y Herramientas Computacionales.",
    technologies: ["Python","Google Colab"]
  },
  {
    title: "Practicante Desarrollador de Unreal Engine 5",
    company: "XR-Labs",
    period: "2024 - 2025",
    description: "Desarrollo de experiencias inmersivas utilizando Unreal Engine 5. Colaboración en proyectos de realidad virtual y aumentada, optimización de rendimiento y creación de contenido interactivo.",
    technologies: ["Unreal Engine 5", "C++", "Git"]
  },
];
---

<section id="curriculum" class="w-full py-12 border-t border-[#ffffff10]">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">Mi Trayectoria</h2>
    <h3 class="text-4xl md:text-5xl font-medium text-[var(--white)] mb-8">
      Experiencia Laboral
    </h3>

    <div class="space-y-8 mb-12">
      {experiences.map((exp, index) => (
        <div class="relative pl-8 border-l-2 border-[var(--white-icon-tr)] hover:border-[var(--sec)] transition-colors duration-300">
          <div class="absolute -left-2 top-0 w-4 h-4 bg-[var(--sec)] rounded-full"></div>
          
          <div class="bg-[#1414149c] border border-[var(--white-icon-tr)] rounded-lg p-6 hover:border-[var(--sec)] transition-all duration-300">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-3">
              <h4 class="text-2xl font-semibold text-[var(--white)]">
                {exp.title}
              </h4>
              <span class="text-[var(--sec)] font-medium mt-1 md:mt-0">
                {exp.period}
              </span>
            </div>
            
            <p class="text-xl text-[var(--white)] mb-3 opacity-80">
              {exp.company}
            </p>
            
            <p class="text-[var(--white-icon)] mb-4">
              {exp.description}
            </p>
            
            <div class="flex flex-wrap gap-2">
              {exp.technologies.map((tech) => (
                <span class="px-3 py-1 text-sm bg-[var(--white-icon-tr)] text-[var(--white)] rounded-full border border-[var(--white-icon-tr)] opacity-60">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="flex justify-center mt-12">
      <a
        href="/cv.pdf"
        download="cv.pdf"
        class="group relative px-8 py-4 bg-[var(--white-icon-tr)] text-[var(--white)] rounded-lg border border-[var(--white-icon-tr)] hover:bg-[var(--sec)] hover:border-[var(--sec)] transition-all duration-300 flex items-center gap-3 text-lg font-medium"
      >
        <svg 
          class="w-6 h-6 transition-transform group-hover:scale-110" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        Descargar CV
      </a>
    </div>
  </div>
</section>